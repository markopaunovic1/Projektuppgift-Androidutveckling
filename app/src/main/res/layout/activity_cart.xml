<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/VarukorgRecyclerView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="300dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/cart_item" />

    <Button
        android:id="@+id/goToPaymentButton"
        android:layout_width="191dp"
        android:layout_height="52dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:text="gÃ¥ till kassan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="188dp"
        android:text="total pris : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cartTotalPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="188dp"
        android:text="346 kr "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/totalPriceTextView" />

    <TextView
        android:id="@+id/deliveryCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text=" frakt :"
        app:layout_constraintBottom_toTopOf="@+id/totalPriceTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DelivieryCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="12dp"
        android:text="99 kr"
        app:layout_constraintBottom_toTopOf="@+id/cartTotalPriceTextView"
        app:layout_constraintStart_toEndOf="@+id/deliveryCostTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>