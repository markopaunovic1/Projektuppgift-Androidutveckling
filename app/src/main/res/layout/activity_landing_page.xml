    <ImageButton
        android:id="@+id/LandingPageRestaurantButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/customcat_button"
        app:layout_constraintBottom_toTopOf="@+id/LandingPageMapsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_fastfood_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/LandingPageCategoryButton"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/customcat_button"
        app:layout_constraintBottom_toTopOf="@+id/LandingPageMapsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LandingPageRestaurantButton"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/baseline_category_24"
        tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/LandingPageMapsButton"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginBottom="220dp"
            android:background="@drawable/customcat_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baseline_map_24"
            tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/LandPageCampaignButton"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/customcat_button"
        android:src="@drawable/baseline_saved_search_24"
        app:layout_constraintBottom_toTopOf="@+id/LandingPageMapsButton"
        app:layout_constraintEnd_toStartOf="@+id/LandingPageCategoryButton"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LandingPageRestaurantButton"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_head"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/navy"
        app:itemTextColor="@color/navy"
        android:background="@drawable/navymenu"/>


</androidx.drawerlayout.widget.DrawerLayout>