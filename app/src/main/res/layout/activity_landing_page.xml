        <ImageButton
            android:id="@+id/LandingPageRestaurantButton"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="108dp"
            android:background="@drawable/buttonres"
            app:layout_constraintBottom_toTopOf="@+id/LandingPageMapsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/LandingPageMapsButton"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/buttonclose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LandPageCampaignButton"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/LandPageCampaignButton"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttoncamp"
            app:layout_constraintBottom_toTopOf="@+id/LandingPageMapsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LandingPageRestaurantButton"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_menu_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/navymenu"
        app:headerLayout="@layout/nav_head"
        app:itemIconTint="@color/navy"
        app:itemTextColor="@color/navy"
        app:menu="@menu/nav_menu"
        tools:visibility="visible" />


</androidx.drawerlayout.widget.DrawerLayout>